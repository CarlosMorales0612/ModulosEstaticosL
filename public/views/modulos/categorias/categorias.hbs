{{> header }}



 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12 text-center">
            <h1>Categorias</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <a class="btn btn-info btn-sm" href="/crear-categoria">
              <i class="fas fa-new-alt">
              </i>
              Crear Categoria
          </a>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped Categorias">
              <thead>
                  <tr>
                      <th style="width: 1%">
                          Código
                      </th>
                      <th style="width: 20%">
                          Nombre Categoria
                      </th>
                      <th style="width: 30%">
                          Descripción
                      </th>
                      <th style="width: 8%" class="text-center">
                          Estado
                      </th>
                      <th style="width: 8%" class="text-center">
                          Acciones
                      </th>
                  </tr>
              </thead>
              <tbody>
                  <tr>
                      <td>
                          C1
                      </td>
                      <td>
                          <a>
                              Panaderia
                          </a>
                      </td>
                      <td>
                          <a>
                              Hacer, mezclar, amasar y hornear diferentes ingredientes 
                              para obtener pan de todos los tamaños, formas, texturas y sabores.
                          </a>
                      </td>
                      <td>
                        <div class="custom-control custom-switch text-center">
                          <input type="checkbox" class="custom-control-input" id="check1" checked>
                          <label class="custom-control-label" for="check1"></label>
                        </div>
                      </td>
                      <td class="project-actions text-center">
                          <a class="btn btn-info btn-sm" href="#">
                              <i class="fas fa-pencil-alt">
                              </i>
                          </a>
                      </td>
                      
                  </tr>

                  <tr>
                      <td>
                          C2
                      </td>
                      <td>
                          <a>
                              Tortas
                          </a>
                      </td>
                      <td>
                          <a>
                              Deliciosa masa de harina y manteca, cocida al horno, con variados sabores, distintos rellenos 
                              y envueltos de crema o frutas.

                          </a>
                      </td>
                      <td>
                        <div class="custom-control custom-switch text-center">
                          <input type="checkbox" class="custom-control-input" id="check2" checked>
                          <label class="custom-control-label" for="check2"></label>
                        </div>
                      </td>
                      <td class="project-actions text-center">
                          <a class="btn btn-info btn-sm" href="#">
                              <i class="fas fa-pencil-alt">
                              </i>
                          </a>
                      </td>
                      
                  </tr>

              </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->



