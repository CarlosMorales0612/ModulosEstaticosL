{{> header }}

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-12">
          <h1 class="m-0 text-center">Crear Empleado</h1>
        </div>
      </div>
    </div>
  </div>
  <section class="content">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <form action="" method="POST">
                <div class="form-group">
                  <label for="nombre">Nombre</label>
                  <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Ingrese el nombre del empleado" required>
                  <span id="nombreError" class="erroresFormulario"></span>
                <div class="form-group">
                  <label for="documento">Numero de documento</label>
                  <input name="documento" id="documento" class="form-control" placeholder="Ingrese el numero de documento" required>
                  <span id="documentoError" class="erroresFormulario"></span>
                <div class="form-group">
                  <label for="cargo">Area</label>
                  <input type="text" name="cargo" id="cargo" class="form-control" placeholder="Ingrese el cargo asignado" required>
                  <span id="cargoError" class="erroresFormulario"></span>
                </div>
                <div class="form-group text-center">
                  <button id="btncrearEmpleado" type="button" class="btn btn-primary">Crear</button>
                  <a href="/empleados"><button type="button" class="btn btn-secondary">Cancelar</button></a>
                </div>
                <script src="js/funcionesEmpleados.js"></script>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

{{> footer }}
